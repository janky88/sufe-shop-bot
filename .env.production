# ====================================
# Telegram 机器人配置（必需）
# ====================================
# 从 Telegram 的 @BotFather 获取机器人令牌
BOT_TOKEN=your_telegram_bot_token_here

# 管理面板访问的认证令牌（请使用强密码）
ADMIN_TOKEN=your_secure_admin_token_here

# 管理员Telegram ID（必需，用于初始化管理员账户）
# 多个管理员用逗号分隔，例如: 123456789,987654321
ADMIN_TELEGRAM_IDS=your_telegram_id_here

# ====================================
# 应用程序设置
# ====================================
# 您的域名（支付回调必需）
BASE_URL=https://your-domain.com

# HTTP 服务器端口
PORT=9147

# ====================================
# 数据库配置
# ====================================
# 数据库类型: sqlite 或 postgres
DB_TYPE=postgres

# PostgreSQL配置（使用外部数据库时填写）
DB_HOST=localhost
DB_PORT=5432
DB_NAME=shopbot
DB_USER=shopbot
DB_PASSWORD=your_secure_password
DB_SSL_MODE=disable

# ====================================
# Redis配置（可选）
# ====================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ====================================
# 支付网关配置（易支付）
# ====================================
# 如果不使用支付功能，这些可以留空
EPAY_PID=your_epay_merchant_id
EPAY_KEY=your_epay_secret_key
EPAY_GATEWAY=https://pay.v8jisu.cn

# ====================================
# 安全设置
# ====================================
# JWT密钥（用于管理员认证）
JWT_SECRET=your_jwt_secret_key_here_must_be_32_chars_long!

# 数据加密密钥（32字符）
DATA_ENCRYPTION_KEY=your_data_encryption_key_32_chars

# 会话密钥
SESSION_SECRET=your_session_secret_key_here

# ====================================
# 安全策略配置
# ====================================
# 启用安全功能
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMIT=true
ENABLE_CSRF=true
ENABLE_SECURITY_LOGGING=true

# 密码策略
ENABLE_PASSWORD_POLICY=true
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPER=true
PASSWORD_REQUIRE_LOWER=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL=true

# 登录安全
LOGIN_MAX_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=15

# 会话安全
SESSION_TIMEOUT_HOURS=24
SESSION_IDLE_MINUTES=30
SESSION_MAX_CONCURRENT=3
ENABLE_IP_VALIDATION=true
ENABLE_USER_AGENT_CHECK=true

# JWT令牌设置
JWT_EXPIRY=24
JWT_REFRESH_EXPIRY=7
ENABLE_LEGACY_AUTH=false

# ====================================
# 日志和监控
# ====================================
LOG_LEVEL=info
METRICS_ENABLED=true
TRACE_HEADER=X-Request-ID

# ====================================
# 其他可选设置
# ====================================
# 货币设置
CURRENCY=CNY
CURRENCY_SYMBOL=¥

# 文件上传限制（字节）
MAX_UPLOAD_SIZE=10485760

# 广播设置
BROADCAST_BATCH_SIZE=50
BROADCAST_DELAY_MS=100

# 通知设置
ALERT_ON_NO_STOCK=true
ALERT_ON_LOW_STOCK=true
LOW_STOCK_THRESHOLD=10

# ====================================
# 开发设置（生产环境请设为false）
# ====================================
DEBUG=false
PRETTY_LOGS=false